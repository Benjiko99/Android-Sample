<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <!-- TODO: Experiment with ways of tinting the menu icons and action text -->
<!--        <item name="android:theme">@style/AppTheme.ThemeOverlay.Toolbar</item>-->
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin</item>
    </style>

    <style name="PrimaryActionChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Widget.Button</item>
        <item name="android:textColor">@color/btn_colored_text</item>
        <item name="chipIconTint">@color/btn_colored_text</item>
        <item name="chipBackgroundColor">@color/action_chip_background_color</item>
        <item name="rippleColor">@color/action_chip_ripple_color</item>
    </style>

</resources>
