<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Base.AppTheme">
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="appBarLayoutStyle">@style/AppBarLayout</item>

        <!-- TODO: Check colors in night mode -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/pink_600</item>
    </style>

    <!-- TODO: Rename -->
    <style name="AppTheme.Surface">
        <item name="android:colorBackground">?attr/colorSurface</item>
    </style>

    <style name="AppTheme.ThemeOverlay.Toolbar" parent="">
        <!-- TODO: Hmm -->
<!--        <item name="colorControlNormal">?attr/colorControlNormal</item>-->
<!--        <item name="colorOnSurface">?attr/colorControlNormal</item>-->
    </style>

    <style name="AppTheme.CardView.Outlined" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeColor">@color/card_outline</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ImageViewerDialog.Default" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:windowLightStatusBar" tools:targetApi="m">?attr/isLightTheme</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>